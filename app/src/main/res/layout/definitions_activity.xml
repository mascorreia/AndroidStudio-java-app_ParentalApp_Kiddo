<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    tools:context=".DefinitionsActivity">

    <Button
        android:id="@+id/btnGestãoAplicacao"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="492dp"
        android:text="Gestão de Aplicações"
        android:onClick="activityGestaoAplicacao"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnGestaoPerfil"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="552dp"
        android:text="Gestão de Perfil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnGestaoTempo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="432dp"
        android:text="Gestão de Tempo"
        android:onClick="activityGestaoTempo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnLocalMapas"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="372dp"
        android:text="Localização e mapas"
        android:onClick="activityLocalMapas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSegurança"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="312dp"
        android:text="Segurança"
        android:onClick="activitySeguranca"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAcerca"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="252dp"
        android:text="Acerca"
        android:onClick="activityAcerca"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/logoKiddo"
        android:layout_width="109dp"
        android:layout_height="90dp"
        android:layout_marginTop="644dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kiddos_logo" />

    <TextView
        android:id="@+id/textViewDefinicoes"
        android:layout_width="97dp"
        android:layout_height="28dp"
        android:layout_marginTop="24dp"
        android:text="Definições"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/voltar"
        android:layout_width="43dp"
        android:layout_height="59dp"
        android:layout_marginBottom="664dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/voltar_atras" />
</androidx.constraintlayout.widget.ConstraintLayout>